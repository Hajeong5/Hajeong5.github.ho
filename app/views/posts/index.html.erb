
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table class="table table-sm" style="text-align: center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">제목</th>
      <th scope="col">내용</th>
      <th scope="col">보기</th>
      <th scope="col">편집</th>
      <th scope="col">삭제</th>
    </tr>
  </thead>
  <tbody><% @posts.each do |post| %>
      
    
    <tr>
      <th scope="row"><%= post.id%></th>
      <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td><%= link_to 'Show', post, :class => "btn" %></td>
        <td><%= link_to 'Edit', edit_post_path(post), :class => "btn" %></td>
        <td><%= link_to 'Destroy', post, :class => "btn", method: :delete, data: { confirm: 'Are you sure?' }, style:"color: red" %></td>
    </tr>
    <% end %>
  </tbody>
</table>



<br>

<%= link_to 'New Post', new_post_path, :class => "btn" %>
